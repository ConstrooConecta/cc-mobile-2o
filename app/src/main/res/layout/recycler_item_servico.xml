<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp"
    android:paddingRight="16dp"
    >

    <LinearLayout
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
       > <!-- Ajusta o padding da direita -->

        <!-- Imagem do serviço -->
        <ImageView
            android:id="@+id/imageViewServico"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logoconstroo" /> <!-- Centraliza horizontalmente a imagem -->

        <!-- Nome do serviço -->
        <TextView
            android:id="@+id/textViewNomeServico"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Eletricista weeoiweweiweoweiwoe"
            android:textSize="18sp"
            android:textStyle="bold" /> <!-- Centraliza o texto horizontalmente -->

        <!-- Código do serviço -->

        <!-- Faixa de preço -->

        <!-- Preço médio -->
        <TextView
            android:id="@+id/textViewCodigoServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Código 12121"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewFaixaPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="R$ 50 - 4.131"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewPrecoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="R$ 177,87 Preço médio"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
